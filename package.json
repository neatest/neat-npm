{
  "name": "neat-npm",
  "description": "neat npm repository",
  "version": "0.0.0",
  "author": {
    "name": "Romain Barissat",
    "email": "romain-noreply@barissat.com",
    "url": "https://olivr.com"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/olivr-templates/neat-npm",
  "repository": "https://github.com/olivr-templates/neat-npm",
  "bugs": {
    "url": "https://github.com/olivr-templates/neat-npm/issues"
  },
  "contributors": [
    {
      "name": "Romain Barissat",
      "email": "romain-noreply@barissat.com",
      "url": "https://olivr.com"
    }
  ],
  "directories": {
    "example": "./examples",
    "test": "./tests"
  },
  "files": [
    "esm/**/*",
    "cjs/**/*",
    "iife/**/*",
    "src/**/*",
    "types/**/*"
  ],
  "types": "types/index.d.ts",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "browser": "iife/index.js",
  "unpkg": "iife/index.min.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.[jt]s?(x)"
    ],
    "coverageDirectory": ".coverage",
    "verbose": true,
    "projects": [
      {
        "displayName": "Browser",
        "testEnvironment": "jsdom",
        "testMatch": [
          "**/tests/**/*.[jt]s"
        ],
        "testURL": "http://localhost"
      },
      {
        "displayName": "Node.js",
        "testEnvironment": "node",
        "testMatch": [
          "**/tests/**/*.[jt]s"
        ]
      }
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-multi-entry": "^3.0.1",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "builtin-modules": "^3.1.0",
    "core-js": "^3.6.5",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-vue": "^7.0.0-alpha.6",
    "glob": "^7.1.6",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.17.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^6.1.0",
    "terser": "^4.8.0",
    "typescript": "^3.9.5",
    "varname": "^2.0.3"
  },
  "scripts": {
    "build": "yarn run clean && yarn build:types && yarn build:js",
    "build:js": "mkdir cjs esm && echo '{\"type\":\"commonjs\"}' > cjs/package.json && echo '{\"type\":\"module\"}' > esm/package.json && rollup -c rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf esm cjs iife types .coverage",
    "format": "yarn lint --fix",
    "lint": "eslint src tests",
    "prepack": "yarn build --environment BUILD:production",
    "test": "jest && yarn test:types && yarn lint",
    "test:types": "tsc -p tests",
    "test:types:watch": "yarn test:types --watch",
    "watch": "yarn run clean && yarn build:js --watch"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.2",
    "@types/node": "^14.0.13",
    "not-defined": "^2.1.4"
  }
}
